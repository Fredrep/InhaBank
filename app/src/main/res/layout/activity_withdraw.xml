<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shakhboz.inhabank.Transactions.Withdraw">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/withdrawMainLinearLayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:weightSum="1"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:id="@+id/withdrawInputEditText"
                android:layout_weight="0.2"
                android:inputType="number"
                />

            <Button
                android:id="@+id/withdrawButtonAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="0.2"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:text="WITHDRAW" />

            <Button
                android:id="@+id/withdrawShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="0.2"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:text="SHOW" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="0.2"
                android:id="@+id/showwithdrawBalanceText"
                />


        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
